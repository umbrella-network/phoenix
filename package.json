{
  "name": "phoenix",
  "version": "3.0.0",
  "description": "A proof-of-stake contract for minting sidechain blocks.",
  "main": "hardhat.config.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "compile": "npx hardhat compile",
    "node": "hardhat node",
    "test": "hardhat test",
    "local-minter": "npx hardhat run --network localhost ./scripts/minter.ts",
    "block-listener": "npx hardhat run --network localhost scripts/blockListener.ts",
    "deploy:registry": "npx hardhat run --network localhost scripts/deployRegistry.ts",
    "deploy:registry:staging": "NODE_ENV=staging npx hardhat run --network staging scripts/deployRegistry.ts",
    "deploy:registry:production": "NODE_ENV=production npx hardhat run --network production scripts/deployRegistry.ts",
    "deploy:contracts": "npx hardhat run --network localhost scripts/deployContracts.ts",
    "deploy:contracts:staging": "NODE_ENV=staging npx hardhat run --network staging scripts/deployContracts.ts",
    "deploy:contracts:sandbox": "NODE_ENV=sandbox npx hardhat run --network sandbox scripts/deployContracts.ts",
    "deploy:contracts:production": "NODE_ENV=production npx hardhat run --network production scripts/deployContracts.ts",
    "deploy:all": "npx hardhat run --network localhost scripts/deployAll.ts",
    "deploy:all:staging": "NODE_ENV=staging npx hardhat run --network staging scripts/deployAll.ts",
    "deploy:all:sandbox": "NODE_ENV=sandbox npx hardhat run --network sandbox scripts/deployAll.ts",
    "deploy:all:production": "NODE_ENV=production npx hardhat run --network production scripts/deployAll.ts",
    "lint": "npm run lint:ts && npm run lint:sol",
    "lint:ts": "eslint . --ext .ts,.tsx,.ts --max-warnings=5",
    "lint:fix": "npm run lint:ts -- --fix",
    "lint:sol": "solhint \"contracts/**/*.sol\" --max-warnings=3",
    "prettier": "prettier --config .prettierrc 'scripts/**/*.ts' 'test/**/*.ts' --check",
    "prettier:format": "prettier --config .prettierrc 'scripts/**/*.ts' 'test/**/*.ts' --write",
    "format": "npm run lint:fix && npm run prettier:format"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/umbrella-network/phoenix.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/umbrella-network/phoenix.git/issues"
  },
  "homepage": "https://github.com/umbrella-network/phoenix.git#readme",
  "devDependencies": {
    "@ethereum-waffle/chai": "~3.1.1",
    "@ethereum-waffle/mock-contract": "~3.3.0",
    "@ethereum-waffle/provider": "~3.1.1",
    "@nomiclabs/hardhat-ethers": "~2.0.2",
    "@nomiclabs/hardhat-etherscan": "~2.1.4",
    "@nomiclabs/hardhat-solhint": "2.0.0",
    "@nomiclabs/hardhat-waffle": "~2.0.1",
    "@nomiclabs/hardhat-web3": "~2.0.0",
    "@openzeppelin/contracts": "~3.2.0",
    "@openzeppelin/contracts-ethereum-package": "~3.0.0",
    "@types/chai": "~4.2.21",
    "@types/mocha": "~9.0.0",
    "@types/superagent": "~4.1.10",
    "@typescript-eslint/eslint-plugin": "~4.15.2",
    "@typescript-eslint/parser": "~4.15.2",
    "@umb-network/toolbox": "~3.3.1",
    "abi-decoder": "~2.3.0",
    "bn.js": "~5.1.3",
    "chai": "~4.2.0",
    "custom-env": "~2.0.1",
    "eslint": "~7.18.0",
    "eslint-config-standard": "~16.0.2",
    "eslint-plugin-import": "~2.22.1",
    "eslint-plugin-node": "~11.1.0",
    "eslint-plugin-promise": "~4.2.1",
    "ethereum-waffle": "~3.2.2",
    "ethers": "~5.4.4",
    "ganache-cli": "~6.12.2",
    "hardhat": "~2.5.0",
    "hardhat-deploy": "~0.8.11",
    "hardhat-deploy-ethers": "~0.3.0-beta.10",
    "hardhat-gas-reporter": "~1.0.4",
    "husky": "~4.3.0",
    "prettier": "~2.2.1",
    "solc": "~0.7.2",
    "solhint": "~3.2.1",
    "solidity-coverage": "~0.7.10",
    "superagent": "~6.1.0",
    "ts-node": "~9.1.1",
    "typescript": "~4.1.5",
    "web3": "~1.3.5"
  }
}
