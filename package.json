{
  "name": "phoenix",
  "version": "0.1.0",
  "description": "A proof-of-stake contract for minting sidechain blocks.",
  "main": "truffle.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "compile": "npx buidler compile",
    "test": "./node_modules/.bin/solidity-coverage",
    "deploy-poc:local": "npx buidler run --network localhost ./scripts/deploy.js",
    "deploy-poc": "npx buidler run ./scripts/deploy.js",
    "flatten:token": "npx truffle-flattener ./contracts/Token.sol | awk '/SPDX-License-Identifier/&&c++>0 {next} 1' > _token.sol",
    "flatten:validator": "npx truffle-flattener ./contracts/ValidatorRegistry.sol | awk '/SPDX-License-Identifier/&&c++>0 {next} 1' > _validatorRegistry.sol",
    "flatten:chain": "npx truffle-flattener ./contracts/Chain.sol | awk '/SPDX-License-Identifier/&&c++>0 {next} 1' > _chain.sol",
    "flatten:bank": "npx truffle-flattener ./contracts/StakingBank.sol | awk '/SPDX-License-Identifier/&&c++>0 {next} 1' > _stakingBank.sol",
    "flatten:all": "npm run flatten:token && npm run flatten:validator && npm run flatten:chain && npm run flatten:bank"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/umbrella-network/phoenix.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/umbrella-network/phoenix.git/issues"
  },
  "homepage": "https://github.com/umbrella-network/phoenix.git#readme",
  "dependencies": {
    "abi-decoder": "^2.3.0",
    "big-number": "^2.0.0",
    "ethjs-provider-http": "^0.1.6",
    "ethjs-rpc": "^0.2.0",
    "ganache-cli": "^6.10.2",
    "solhint": "^3.2.0"
  },
  "devDependencies": {
    "@nomiclabs/buidler": "^1.4.7",
    "@nomiclabs/buidler-ethers": "^2.0.0",
    "@nomiclabs/buidler-waffle": "^2.1.0",
    "@openzeppelin/contracts": "^3.2.0",
    "@openzeppelin/test-helpers": "^0.5.6",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "eslint": "^7.9.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "ethereum-waffle": "^3.1.0",
    "ethers": "^5.0.14",
    "husky": "^4.3.0",
    "solc": "^0.6.0",
    "solidity-coverage": "^0.7.10",
    "truffle-flattener": "^1.5.0"
  }
}
