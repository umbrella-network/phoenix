{
  "name": "phoenix",
  "version": "0.1.0",
  "description": "A proof-of-stake contract for minting sidechain blocks.",
  "main": "hardhat.config.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "compile": "npx hardhat compile",
    "node": "hardhat node",
    "test": "hardhat test",
    "local-minter": "npx hardhat run --network localhost ./scripts/minter.ts",
    "block-listener": "npx hardhat run --network localhost scripts/block-listener.ts",
    "deploy:registry": "npx hardhat run --network localhost scripts/deploy-registry.ts",
    "deploy:registry:dev": "NODE_ENV=dev npx hardhat run --network dev scripts/deploy-registry.ts",
    "deploy:registry:staging": "NODE_ENV=staging npx hardhat run --network staging scripts/deploy-registry.ts",
    "deploy:registry:production": "NODE_ENV=production npx hardhat run --network production scripts/deploy-registry.ts",
    "deploy:contracts": "npx hardhat run --network localhost scripts/deploy-contracts.ts",
    "deploy:contracts:dev": "NODE_ENV=dev npx hardhat run --network dev scripts/deploy-contracts.ts",
    "deploy:contracts:staging": "NODE_ENV=staging npx hardhat run --network staging scripts/deploy-contracts.ts",
    "deploy:contracts:production": "NODE_ENV=production npx hardhat run --network production scripts/deploy-contracts.ts",
    "deploy:all": "npx hardhat run --network localhost scripts/deploy-all.ts",
    "deploy:all:dev": "NODE_ENV=dev npx hardhat run --network dev scripts/deploy-all.ts",
    "deploy:all:staging": "NODE_ENV=staging npx hardhat run --network staging scripts/deploy-all.ts",
    "deploy:all:production": "NODE_ENV=production npx hardhat run --network production scripts/deploy-all.ts",
    "flatten:token": "npx truffle-flattener ./contracts/Token.sol | awk '/SPDX-License-Identifier/&&c++>0 {next} 1' > _token.sol",
    "flatten:validator": "npx truffle-flattener ./contracts/ValidatorRegistry.sol | awk '/SPDX-License-Identifier/&&c++>0 {next} 1' > _validatorRegistry.sol",
    "flatten:chain": "npx truffle-flattener ./contracts/Chain.sol | awk '/SPDX-License-Identifier/&&c++>0 {next} 1' > _chain.sol",
    "flatten:bank": "npx truffle-flattener ./contracts/StakingBank.sol | awk '/SPDX-License-Identifier/&&c++>0 {next} 1' > _stakingBank.sol",
    "flatten:registry": "npx truffle-flattener ./contracts/Registry.sol | awk '/SPDX-License-Identifier/&&c++>0 {next} 1' > _registry.sol",
    "flatten:all": "npm run flatten:token && npm run flatten:validator && npm run flatten:chain && npm run flatten:bank && npm run flatten:registry",
    "lint": "npm run lint:ts && npm run lint:sol",
    "lint:ts": "eslint . --ext .ts,.tsx,.ts",
    "lint:fix": "npm run lint:ts -- --fix",
    "lint:sol": "solhint \"contracts/**/*.sol\" --max-warnings=5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/umbrella-network/phoenix.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/umbrella-network/phoenix.git/issues"
  },
  "homepage": "https://github.com/umbrella-network/phoenix.git#readme",
  "devDependencies": {
    "@ethereum-waffle/chai": "^3.1.1",
    "@ethereum-waffle/mock-contract": "^3.1.1",
    "@ethereum-waffle/provider": "^3.1.1",
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-solhint": "2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^3.2.0",
    "@openzeppelin/contracts-ethereum-package": "^3.0.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.1",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "@umb-network/toolbox": "^0.1.0",
    "abi-decoder": "^2.3.0",
    "bn.js": "^5.1.3",
    "chai": "^4.2.0",
    "custom-env": "^2.0.1",
    "eslint": "^7.18.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "ethereum-waffle": "^3.2.2",
    "ganache-cli": "^6.12.1",
    "hardhat": "^2.0.10",
    "hardhat-deploy": "^0.7.0-beta.45",
    "hardhat-deploy-ethers": "^0.3.0-beta.7",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^4.3.0",
    "solc": "^0.7.2",
    "solhint": "^3.2.1",
    "solidity-coverage": "^0.7.10",
    "truffle-flattener": "^1.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5",
    "web3": "^1.3.0"
  },
  "engines": {
    "node": "10.22.1"
  }
}
