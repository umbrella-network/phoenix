{
  "extends": "solhint:all",
  "rules": {
    "func-visibility": [
      "error",
      {
        "ignoreConstructors": true
      }
    ],
    "no-empty-blocks": "off",
    "contract-name-camelcase": "off",
    "not-rely-on-time": "off",
    "reason-string": [
      "warn",
      {
        "maxLength": 64
      }
    ],
    "compiler-version": [
      "error",
      "^0.8.0"
    ]
  }
}
